%h1= t('operations.listing_models', :model => Peak.model_name.human)
- @peaks.each_with_index do |peak, i|
  = render 'peaks/peak', :peak => peak, :abstract => true, :number => i + 1
= paginate @peaks

%br
%h2
  = t('operations.new_model', :model => Peak.model_name.human)

= form_for Peak.new, :url => new_peak_path, :html => { :method => :get } do |f|
  = f.text_field :name, :placeholder => Peak.human_attribute_name(:name)
  = f.submit t('operations.new'), :class => [:btn, :primary]
