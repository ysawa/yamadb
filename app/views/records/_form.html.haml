= form_for(record) do |f|
  = error_explanation(record)
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :peaks
    = select_tag 'record[peak_ids][]', options_for_select(Peak.all.collect { |peak| [peak.name, peak.id] })
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :finish
    = f.datetime_select :finish
  .field
    = f.label :content
    = f.text_area :content, :cols => 80
  .actions
    = f.submit
