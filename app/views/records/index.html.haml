%h1= t 'operations.listing_models', :model => Record.model_name.human

%table
  %thead
    %tr
      %th= Record.human_attribute_name :name
      %th= Record.human_attribute_name :start
      %th= Record.human_attribute_name :content
      %th{:colspan => 3}

  %tbody
    - for record in @records
      %tr{ :class => cycle(:odd, :even) }
        %td= record.name
        %td= l record.start if record.start
        %td= truncate(record.content, :length => 30)
        %td.action= link_to t('operations.show'), record
        %td.action= link_to t('operations.edit'), edit_record_path(record)
        %td.action= link_to t('operations.destroy'), record, :confirm => translate_question('Are you sure?'), :method => :delete

%p= link_to t('operations.new_model', :model => Record.model_name.human), new_record_path
