= form_for @equipment do |f|
  -if @equipment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@equipment.errors.count, "error")} prohibited this equipment from being saved:"
      %ul
        - @equipment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_area :content, :rows => 4

  %h3= EquipmentItem.model_name.human
  = render :partial => "equipment_items/nested_fields", :as => :equipment_item, :collection => @equipment.items.ordered_by_priority
  = render :partial => 'equipment_items/nested_fields', :as => :equipment_item, :object => EquipmentItem.new(:priority => 2) if @equipment.items.blank?
  = link_to t('operations.add'), "#", :class => "add"
  :javascript
    $(function () {
        $('.add').bind("click", function () {
            $('.add').before("#{escape_javascript(render :partial => 'equipment_items/nested_fields', :as => :equipment_item, :object => EquipmentItem.new(:priority => 2))}");
            $('.field:last .star').rating();
            return false;
        })
    })
  .actions
    = f.submit
