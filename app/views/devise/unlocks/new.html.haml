%h1 Resend unlock instructions
= form_for(resource, :as => resource_name, :url => unlock_url(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    = f.email_field :email
  .actions= f.submit translate_button('Resend unlock instructions')
= render 'devise/shared/links'
