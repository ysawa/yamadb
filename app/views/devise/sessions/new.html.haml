%h1= t('operations.sign_in')
= form_for(resource, :as => resource_name, :url => session_url(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    .input= f.email_field :email
  .field
    = f.label :password
    .input= f.password_field :password
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      .input= f.label :remember_me, :class => :user_remember_me
  .actions
    = f.submit translate_button('Sign in'), :class => [:btn, :primary]
= render 'devise/shared/links'
